print("This is the health helper where it will tell you what illness you might have based on your symptoms")

# Load the healthcare dataset
import pandas as pd

# This is a sample dataset - in a real project you might use NHS data or other medical databases
health_data = pd.DataFrame({
    'symptom': ['fever', 'cough', 'headache', 'rash', 'sore throat', 'fatigue'],
    'common_conditions': [
        'flu, cold, COVID-19',
        'cold, flu, asthma',
        'migraine, tension, dehydration',
        'allergy, eczema, measles',
        'strep throat, cold, tonsillitis',
        'anemia, depression, sleep disorder'
    ],
    'urgency': ['medium', 'low', 'low', 'medium', 'medium', 'low']
})

def health_helper():
    print("Welcome to the Health Assistant!")
    print("Enter your symptoms one at a time (type 'done' when finished):")

    symptoms = []
    while True:
        symptom = input("> ").lower().strip()
        if symptom == 'done':
            break
        symptoms.append(symptom)

    print("\nPossible conditions based on your symptoms:")
    found = False
    for s in symptoms:
        if s in health_data['symptom'].values:
            found = True
            info = health_data[health_data['symptom'] == s]
            print(f"- {s}: {info['common_conditions'].values[0]} (urgency: {info['urgency'].values[0]})")

    if not found:
        print("No matching symptoms found in our database.")

    print("\nRemember: This is not a doctor! Always check with a real doctor if you're worried.")

# Run the helper
health_helper()
